<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @homepage_banner } %>

<div class="form-group">
  <%= f.field_container :title do %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  <% end %>

  <%= f.field_container :image do %> 
    <%= f.label :image %>
    <%= f.file_field :image %>
    <%= image_tag main_app.url_for(@homepage_banner.image.url(:small)) if @homepage_banner.image %>
  <% end %>
</div>
